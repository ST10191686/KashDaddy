<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- CalendarView for selecting dates -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- TextView for showing selected date -->
    <TextView
        android:id="@+id/selectedDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:text="Selected Date: None" />

    <!-- TextView for displaying the reminder label -->
    <TextView
        android:id="@+id/RemindersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedDateTextView"
        android:layout_marginTop="8dp"
        android:text="Reminders:"
        android:textSize="18sp" />

    <!-- ScrollView containing LinearLayout for displaying reminders -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/RemindersTextView"
        android:layout_above="@id/addReminderButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/remindersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <!-- Button to add a new reminder -->
    <Button
        android:id="@+id/addReminderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Reminder"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

    <!-- Hidden form for adding reminders -->
    <LinearLayout
        android:id="@+id/reminderForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        android:background="@android:color/background_light"
        android:layout_above="@id/addReminderButton">

        <EditText
            android:id="@+id/reminderTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder Title"/>

        <EditText
            android:id="@+id/reminderAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount Needed"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/saveReminderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</RelativeLayout>
